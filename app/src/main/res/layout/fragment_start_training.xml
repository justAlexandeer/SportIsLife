<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.StartTrainingFragment">

    <ImageView
        android:id="@+id/start_training_distanceImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"

        android:src="@drawable/location_64"
        app:layout_constraintEnd_toStartOf="@+id/start_training_caloriesImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/start_training_speedImage"
        app:layout_constraintTop_toBottomOf="@+id/start_training_timer" />

    <ImageView
        android:id="@+id/start_training_speedImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"

        android:src="@drawable/footstep_64"
        app:layout_constraintEnd_toStartOf="@+id/start_training_distanceImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_training_timer" />

    <ImageView
        android:id="@+id/start_training_caloriesImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"

        android:src="@drawable/flame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/start_training_distanceImage"
        app:layout_constraintTop_toBottomOf="@+id/start_training_timer" />

    <TextView
        android:id="@+id/start_training_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/start_training_distanceImage"
        app:layout_constraintStart_toStartOf="@+id/start_training_distanceImage"
        app:layout_constraintTop_toBottomOf="@+id/start_training_distanceImage" />

    <TextView
        android:id="@+id/start_training_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/start_training_caloriesImage"
        app:layout_constraintStart_toStartOf="@+id/start_training_caloriesImage"
        app:layout_constraintTop_toBottomOf="@+id/start_training_caloriesImage" />

    <TextView
        android:id="@+id/start_training_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/start_training_speedImage"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/start_training_speedImage"
        app:layout_constraintTop_toBottomOf="@+id/start_training_speedImage" />


    <TextView
        android:id="@+id/start_training_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="70sp"

        app:layout_constraintBottom_toTopOf="@+id/start_training_button_start_services"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />


    <Button
        android:id="@+id/start_training_button_start_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_training_button_start_training"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>